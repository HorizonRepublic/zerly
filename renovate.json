{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    ":semanticCommits"
  ],
  "baseBranches": [
    "dev"
  ],
  "commitMessagePrefix": "chore(deps):",
  "branchPrefix": "renovate/",
  "labels": [
    "dependencies",
    "renovate"
  ],
  "addLabels": [
    "automated-pr"
  ],
  "dependencyDashboard": true,
  "osvVulnerabilityAlerts": true,
  "assignees": [
    "@themaiby"
  ],
  "reviewers": [
    "@themaiby"
  ],
  "automerge": true,
  "automergeStrategy": "squash",
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "groupName": "NestJS ecosystem",
      "matchPackagePatterns": [
        "^@nestjs/",
        "^nestjs-",
        "^@nestia/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "matchPackagePatterns": [
        "^@nx/",
        "^nx$",
        "^@nrwl/"
      ],
      "enabled": false
    },
    {
      "groupName": "Testing and Linting",
      "matchPackagePatterns": [
        "^jest",
        "^@types/jest",
        "^eslint",
        "^prettier",
        "^@swc/"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "Internal packages",
      "matchPackagePatterns": [
        "^@zerly/"
      ],
      "enabled": false
    },
    {
      "groupName": "Major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "dependencies",
        "major-update"
      ]
    },
    {
      "groupName": "Other dependencies",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "excludePackagePatterns": [
        "^@nestjs/",
        "^nestjs-",
        "^@nestia/",
        "^@nx/",
        "^nx$",
        "^jest",
        "^eslint",
        "^prettier"
      ]
    }
  ]
}
