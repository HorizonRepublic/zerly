{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":disableRateLimiting", ":semanticCommits"],
  "baseBranchPatterns": ["dev"],
  "commitMessagePrefix": "chore(deps):",
  "branchPrefix": "renovate/",
  "labels": ["dependencies", "renovate"],
  "addLabels": ["automated-pr"],
  "dependencyDashboard": true,
  "osvVulnerabilityAlerts": true,
  "assignees": ["@themaiby"],
  "reviewers": ["@themaiby"],
  "automerge": true,
  "automergeStrategy": "squash",
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "groupName": "NestJS ecosystem",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["/^@nestjs//", "/^nestjs-/", "/^@nestia//"]
    },
    {
      "enabled": false,
      "matchPackageNames": ["/^@nx//", "/^nx$/", "/^@nrwl//"]
    },
    {
      "groupName": "Testing and Linting",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "/^jest/",
        "/^@types/jest/",
        "/^eslint/",
        "/^prettier/",
        "/^@swc//"
      ]
    },
    {
      "groupName": "Internal packages",
      "enabled": false,
      "matchPackageNames": ["/^@zerly//"]
    },
    {
      "groupName": "Major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "major-update"]
    },
    {
      "groupName": "Other dependencies",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "!/^@nestjs//",
        "!/^nestjs-/",
        "!/^@nestia//",
        "!/^@nx//",
        "!/^nx$/",
        "!/^jest/",
        "!/^eslint/",
        "!/^prettier/"
      ]
    }
  ]
}
